@model IEnumerable<Report_a_Fault.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

@for (var i = 0; i < 5; i++)
{
    <div></div>
    <br />
}
<div class="card-shadow">
    <h1 class="heading-tetiary">Central University of Technology Departments</h1>
    @if (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Super_Admin))
    {
        <div class="add-new-subject">

            <a asp-controller="Department" asp-action="Add" class="add-new-subject-btn">
                <div class="inner-btn">
                    <ion-icon class="icon" name="add-outline"></ion-icon>
                    <p>Add New Department</p>
                </div>
            </a>

        </div>
    }

    <table class="cus-table">
        <thead>
            <tr>
                <th>
                    DEPARTMENT NAME
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>

                    <td>
                        <div class="actions">
                            <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.DepartmentId">Delete</a>
                            <hr />
                            <a asp-action="Update" asp-controller="Department" asp-route-id="@item.DepartmentId">Update</a>
                            <hr />
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




