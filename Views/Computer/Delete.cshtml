@model Report_a_Fault.Models.Computer

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}
@for (var i = 0; i < 5; i++)
{
    <div></div>
    <br />
}
<h1 class="heading-tetiary">Delete</h1>

<h3 class="subheading">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-8">
            CAMPUS NAME
        </dt>
        <div></div>
        <br />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lab.Building.Campus.CampusName)
        </dd>
        <div></div>
        <br />
        <dt class = "col-sm-8">
            BUILDING NAME
        </dt>
        <div></div>
        <br />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lab.Building.BuildingName)
        </dd>
        <div></div>
        <br />
        <dt class = "col-sm-8">
            LABOLATORY
        </dt>
        <div></div>
        <br />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lab.LabNumber)
        </dd>
        <div></div>
        <br />
        <dt class = "col-sm-8">
            COMPUTER NUMBER
        </dt>
        <div></div>
        <br />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComputerNumber)
        </dd>
        <div></div>
        <br />
        <dt class = "col-sm-2">
           STATUS
        </dt>
        <div></div>
        <br />
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComputerComponentStatus)
        </dd>
        <div></div>
        <br />
        <dt class="col-sm-8">
            COMPUTER COMPONETS
        </dt>
        <div></div>
        <br />
        @if (Model.Computer_Comps != null && Model.Computer_Comps.Count()>0)
        {
            @foreach (var u in Model.Computer_Comps)
            {
                <dd class="col-sm-10">
                    * @Html.DisplayFor(model => u.Name)
                </dd>

            }
        }
        else
        {
            <dd class="col-sm-10">
                * Currently Unavailable
            </dd>
        }

     
    </dl>
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-dark" /> 
    </form>
   
</div>
