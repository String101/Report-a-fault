@model Report_a_Fault.ViewModel.CompVM

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
@for (var i = 0; i < 5; i++)
{
    <div></div>
    <br />
}
<h1 class="heading-tetiary">ADD NEW COMPUTER COMPONET </h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <strong>
                    <label class="control-label"> NAME</label>
                </strong>
                <div></div>
                <br />
                <input asp-for="ComputerComp.Name" class="form-control" />
                <span asp-validation-for="ComputerComp.Name" class="text-danger"></span>
            </div>
            <div></div>
            <br />
            <div class="form-group">
                <strong>
                    <label class="control-label"> COMPUTER IDENTITY NUMBER</label>
                </strong>
                <div></div>
                <br />
                <select asp-for="ComputerComp.ComputerId" class="form-control" asp-items="Model.ComputerList"></select>
            </div>
            <div></div>
            <br />
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
