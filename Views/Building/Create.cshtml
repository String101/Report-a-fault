@model Report_a_Fault.Models.Building

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
@for (var i = 0; i < 5; i++)
{
    <div></div>
    <br />
}
<h1 class="heading-tetiary">ADD CAMPUS BUILDING</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CampusId" hidden class="form-control" />
            <div class="form-group">
                <strong>
                    <label class="control-label"> BUILDING NAME</label>
                </strong>
                <div></div>
                <br />
                <input asp-for="BuildingName" class="form-control" />
                <span asp-validation-for="BuildingName" class="text-danger"></span>
            </div>
            <div></div>
            <br />
            <div class="form-group">
                <input type="submit" value="ADD" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
