@model Report_a_Fault.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/sihle.css">
@for (var i = 0; i < 7; i++)
{
    <div></div>
    <br />
}
<div class="background-container" >
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-12 text-lg-start">
                            <img src="~/images/CUT.png" height="50px" />
                            
                        </div>
                    </div>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <br />
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" aria-required="true" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" aria-required="true" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="dropdown">
                         Sign in with your credentials
                           
                            <div class="dropdown-content">
                              
                                <button class="btn btn-outline-primary" asp-action="Login" asp-controller="Account" type="submit">Log in</button>
                                <a asp-controller="Account" onclick="show()" asp-action="ForgotPassword">Change Password</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (@TempData["Success"] != null)
{
    <script>


        jSuites.notification({
            name: 'Notification',
            message: '@TempData["Success"]',
        });

    </script>
}
@if (TempData["Error"] != null)
{
    <script>
        jSuites.notification({
            error: 1,
            name: 'Error message',
            message: '@TempData["error"]',
        });
    </script>
}
<script>
    var show = function () {
        // Show the loading spin
        jSuites.loading.show();
        // Hide the loading spin after two seconds
        setTimeout(function () {
            // Hide
            jSuites.loading.hide();
        }, 2000);
    }
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
