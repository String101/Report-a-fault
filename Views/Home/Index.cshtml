@model Report_a_Fault.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
@for (var i = 0; i < 7; i++)
{
    <div></div>
    <br />
}
<div class="background-container" >
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-12 text-lg-start">
                            <img src="~/images/CUT.png" height="50px" />
                            
                        </div>
                    </div>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br />
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" aria-required="true" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" aria-required="true" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div>
                            <button class="btn btn-form" asp-action="Login" asp-controller="Account" type="submit">Log in</button>
                            <br />
                            <a asp-action="ForgotPassword" asp-controller="Account">Forgot your password?</a>
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
